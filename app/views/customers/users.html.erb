<% if @users.present? %>
	<h3><%= @customer.name %></h3>
	<table class="table table-bordered table-striped table-condensed">
		<thead>
			<th>User</th>
			<th>Email</th>
			<th>Action</th>
		</thead>	
		<tbody>
			<% @users.each do |user| %>
				<tr>
					<td><a href="<%= user_path(user) %>"><%= user.first_name || user.last_name || ''%></a></td>
					<td><%= user.email %></td>
					<td>
						<!-- <a href="<%= edit_user_registration_path(user.id) %>" class="btn btn-primary btn-sm">Edit</a> -->
						<%= link_to 'Unassign',unassign_customer_path(@customer,{uid: user.id}), :class=>"btn btn-primary btn-xs" %>
					</td>
				</tr>	
			<% end %>
		</tbody>	
	</table>	
<% else %>
	<div class="alert alert-info text-center">
		No user has been found.
	</div>	
<% end %>

