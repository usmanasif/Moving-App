<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <h2 class="text-center login-title">Forgot your password?</h2>
      <div class="account-wall">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
          <%= devise_error_messages! %>

          <div><%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true , class: "form-control"%></div>

          <div><%= f.submit "Send me reset password instructions", class: "btn btn-primary" , style: "width:100%;"%></div>
        <% end %>
        <div style="margin-left:10%;">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
