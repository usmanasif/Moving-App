<style type="text/css">
  .select{
    width: 100% !important;
    height: 29px;
    background-color: #fff;
  }
</style>
<%= hidden_field_tag 'active_class', 'create_project'%>
<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <%= form_for @item, :url=> url, html: { class: 'well form-horizontal', role: 'form'} do |f| %>

      <fieldset>
        <% if @item.errors.any? %>
          <div class="alert alert-danger">
            <h4><%= pluralize(@item.errors.count, "error") %> prohibited this project from being saved:</h4>

            <ul>
            <% @item.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.label "Item #", class: "col-sm-3 control-label" %>
          <div class="col-sm-9" style="margin-top: 1.5%;">
            <%= @count+1 %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "Article", class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :article, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "Description at origin", class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :description_at_origin, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "Warehouse cross", class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :warehouse_cross, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "Driver", class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :driver, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "Warehouse", class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :warehouse, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "Shipper", class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :shipper, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "Exception", class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :exception, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "Desr symbol", class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%#= f.text_field :desr_symbole, class: "form-control" %>
            <%= f.select :desr_symbole, GlobalConstants::Options::DESCR, class: "select" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "Exception symbol", class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%#= f.text_field :exception_symbol, class: "form-control" %>
            <%= f.select :exception_symbol, GlobalConstants::Options::EXCEP, class: "select" %>
          </div>
        </div>

         <div class="form-group">
          <%= f.label "Location symbol", class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%#= f.text_field :location_symbol, class: "form-control" %>
            <%= f.select :location_symbol, GlobalConstants::Options::LOCATION, class: "select" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label "Image 1", class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.file_field :file1 %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label "Image 2", class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.file_field :file2 %>
          </div>
        </div>
      </fieldset>

      <div class="col-sm-offset-3">
        <%= f.submit 'Save', class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>