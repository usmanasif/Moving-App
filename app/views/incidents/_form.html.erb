<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <%= form_for [@project, @incident], html: { class: 'well form-horizontal', role: 'form'}  do |f| %>
      <fieldset>
    
        <% if @incident.errors.any? %>
          <div class="alert alert-danger">
            <h2><%= pluralize(@incident.errors.count, "error") %> prohibited this incident from being saved:</h2>

            <ul>
            <% @incident.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      
        <div class="form-group">
          <%= f.label :report_type, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :report_type, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :your_name, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :your_name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :job_title, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :job_title, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :injury_date, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.date_select :injury_date, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :injury_time, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.time_select :injury_time, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :witnesses, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :witnesses, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :location, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :location, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :circumstances, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :circumstances, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :event_discription, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :event_discription, class: "form-control" %>
          </div>
        </div>


        <div class="form-group">
          <%= f.label :injuries_type, class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= f.text_field :injuries_type, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :ppe_used, "#{f.check_box :ppe_used} PPE used".html_safe, class: "col-sm-offset-3 control-label" %>
        </div>

        <div class="form-group">
          <%= f.label :medical_assistance_provided, "#{f.check_box :medical_assistance_provided} Medical Assistance Provided".html_safe, class: "col-sm-offset-3 control-label" %>
        </div>
        <div class="form-group">
        <%= f.file_field :file, :class=>"file" ,class: "col-sm-offset-3 control-label"%>
        </div>
      </fieldset>

      <div class="col-sm-offset-3">
        <%= f.submit 'Save', class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>